<?xml version="1.0" encoding="utf-8"?>
<!-- 矩形边框圆角   渐变 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="true">

    <size android:height="70dp"
        android:width="100dp"/>

    <stroke
        android:width="2dp"
        android:color="#0000FF" />

    <corners android:radius="30dp" />

    <gradient
        android:angle="45"
        android:centerX="0.5"
        android:centerY="0.5"
        android:centerColor="#4169E1"
        android:endColor="#0000CD"
        android:startColor="#00BFFF"
        android:type="linear" />

</shape>